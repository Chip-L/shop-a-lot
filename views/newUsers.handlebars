<head>
  <link rel="stylesheet" href="/css/user.css" />
</head>

<div class="loginRenderArea">
  <div>
    <h1 class="title">Sign Up</h1>

    <form id="signup-form" class="card">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input name="username-signup" type="text" id="username-signup" />
      </div>

      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input name="email-signup" type="text" id="email-signup" />
      </div>

      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input name="password-signup" type="password" id="password-signup" />
        <br />
        <p class="muted">Password must be at least 8 characters long</p>
      </div>

      <div class="form-group">
        <label for="character-signup">
          Character Name:
        </label>
        <input name="character-signup" type="text" id="character-signup" />
      </div>

      <div class="form-group">
        <button type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/newUsers.js"></script>